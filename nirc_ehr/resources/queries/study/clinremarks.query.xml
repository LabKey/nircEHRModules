<query xmlns="http://labkey.org/data/xml/query">
    <metadata>
        <tables xmlns="http://labkey.org/data/xml">
            <table tableName="clinremarks" tableDbType="TABLE" useColumnOrder="true">
                <columns>
                    <column columnName="Id" />
                    <column columnName="date">
                        <formatString>Date</formatString>
                    </column>
                    <column columnName="hx">
                        <columnTitle>History</columnTitle>
                    </column>
                    <column columnName="s">
                        <columnTitle>Subjective</columnTitle>
                        <inputType>textarea</inputType>
                        <facetingBehavior>ALWAYS_OFF</facetingBehavior>
                    </column>
                    <column columnName="o">
                        <columnTitle>Objective</columnTitle>
                        <inputType>textarea</inputType>
                        <facetingBehavior>ALWAYS_OFF</facetingBehavior>
                    </column>
                    <column columnName="a">
                        <columnTitle>Assessment</columnTitle>
                        <inputType>textarea</inputType>
                        <facetingBehavior>ALWAYS_OFF</facetingBehavior>
                    </column>
                    <column columnName="p">
                        <columnTitle>Plan</columnTitle>
                        <inputType>textarea</inputType>
                        <facetingBehavior>ALWAYS_OFF</facetingBehavior>
                    </column>
                    <column columnName="category">
                        <columnTitle>Category</columnTitle>
                        <fk>
                            <fkDbSchema>ehr_lookups</fkDbSchema>
                            <fkTable>data_category</fkTable>
                            <fkColumnName>value</fkColumnName>
                            <fkDisplayColumnName useRawValue="true"/>
                        </fk>
                    </column>
                    <column columnName="remark">
                        <inputType>textarea</inputType>
                        <inputRows>5</inputRows>
                    </column>
                    <column columnName="vetreview">
                        <columnTitle>Vet Review</columnTitle>
                        <inputType>textarea</inputType>
                        <inputRows>5</inputRows>
                        <isHidden>true</isHidden>
                    </column>
                    <column columnName="vetreviewdate">
                        <columnTitle>Vet Review Date</columnTitle>
                        <formatString>Date</formatString>
                        <isHidden>true</isHidden>
                    </column>
                </columns>
            </table>
        </tables>
    </metadata>
</query>