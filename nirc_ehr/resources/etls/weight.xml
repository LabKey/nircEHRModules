<?xml version="1.0" encoding="UTF-8"?>
<etl xmlns="http://labkey.org/etl/xml">
    <name>Weights</name>
    <description>Weights data</description>
    <transforms>
        <transform id="step1" type="org.labkey.di.pipeline.TransformTask">
            <description>Copy to weights target</description>
            <source schemaName="dbo" queryName="q_weight"/>
            <destination schemaName="study" queryName="weight"
                         bulkLoad="true" batchSize="5000" targetOption="merge">
                <columnTransforms>
                    <column source="weightDate" target="date"/>
                </columnTransforms>
            </destination>
        </transform>
    </transforms>

    <schedule>
        <cron expression="0 0 20 * * ?" /> <!--Run at 8PM every day-->
    </schedule>
</etl>