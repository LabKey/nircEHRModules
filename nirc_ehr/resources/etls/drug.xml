<?xml version="1.0" encoding="UTF-8"?>
<etl xmlns="http://labkey.org/etl/xml">
    <name>Drug</name>
    <description>Drug Administration</description>
    <transforms>
        <transform id="step1" type="org.labkey.di.pipeline.TransformTask">
            <description>Copy to drug target</description>
            <source schemaName="dbo" queryName="q_drug"/>
            <destination schemaName="study" queryName="drug"
                         bulkLoad="true" batchSize="5000" targetOption="merge">
                <columnTransforms>
                    <column source="administrationDate" target="date"/>
                </columnTransforms>
            </destination>
        </transform>
    </transforms>

