<?xml version="1.0" encoding="UTF-8"?>
<etl xmlns="http://labkey.org/etl/xml" standalone="false">
    <name>Protocol</name>
    <description>Protocol data</description>
    <transforms>
        <transform id="step1" type="org.labkey.di.pipeline.TransformTask">
            <description>Copy to protocol target</description>
            <source schemaName="dbo" queryName="q_protocol"/>
            <destination schemaName="ehr" queryName="protocol"
                         bulkLoad="true" targetOption="merge">
                <alternateKeys>
                    <column name="protocol"/>
                </alternateKeys>
            </destination>
        </transform>
        <transform id="step2" type="org.labkey.di.pipeline.TransformTask">
            <description>Copy to lookups target</description>
            <source schemaName="dbo" queryName="q_protocol_amendments"/>
            <destination schemaName="ehr" queryName="protocol_amendments"
                         bulkLoad="true" batchSize="5000" targetOption="merge">
                <alternateKeys>
                    <column name="protocol"/>
                </alternateKeys>
                <columnTransforms>
                    <column source="amendmentDate" target="date"/>
                    <column source="protocolId" target="rowid"/>
                </columnTransforms>
            </destination>
        </transform>
    </transforms>

    <incrementalFilter className="ModifiedSinceFilterStrategy" timestampColumnName="modified" >
        <deletedRowsSource schemaName="dbo" queryName="q_protocol_delete" timestampColumnName="modified"
                           deletedSourceKeyColumnName="protocol" targetKeyColumnName="protocol"/>
    </incrementalFilter>
</etl>